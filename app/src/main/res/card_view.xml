<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/card_courses"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/card_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp">

        <RelativeLayout
            android:id="@+id/card_course_name_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@id/card_done"
            android:layout_toLeftOf="@id/card_done"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/card_course_name"
                android:layout_alignStart="@id/card_course_name"
                android:layout_alignLeft="@id/card_course_name"
                android:layout_alignEnd="@id/card_course_name"
                android:layout_alignRight="@id/card_course_name"
                android:background="@drawable/course_underline"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/card_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/card_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_course_name_block"
            android:layout_marginBottom="-7dp"
            android:indeterminate="false"
            android:max="100"
            android:paddingTop="4dp"
            android:progress="4"/>

        <View
            android:id="@+id/button_arrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"/>

        <LinearLayout
            android:id="@+id/expandable_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_progress_bar"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/card_button_contents"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/card_courses_disabled"
                android:drawableStart="@drawable/ic_baseline_format_list_bulleted_24"
                android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
                android:drawablePadding="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/navigation_titles_contents"
                android:textColor="@color/primary"
                android:textScaleX="1.2"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/card_button_test"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/card_courses_disabled"
                android:drawableStart="@drawable/ic_approval"
                android:drawableLeft="@drawable/ic_approval"
                android:drawablePadding="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/navigation_titles_test"
                android:textColor="@color/primary"
                android:textScaleX="1.2"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/card_button_last_exercise"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/card_courses_disabled"
                android:drawableStart="@drawable/ic_baseline_navigate_next_24"
                android:drawableLeft="@drawable/ic_baseline_navigate_next_24"
                android:drawablePadding="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text="@string/home_last_task"
                android:textColor="@color/primary"
                android:textScaleX="1.2"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>